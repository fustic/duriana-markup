.carousel-inner
	overflow hidden
	width 100%
	&>.item
		height 100%
		display none
		transition .6s ease-in-out left
	&>.active
		left 0
		&.left
			left -100%
		&.right
			left 100%
	&>.active, &>.next, &>.prev
		display block
	&>.next, &>.prev
		position absolute
		top 0
		width 100%
	&>.next
		left 100%
		&.left
			left 0
	&>.prev
		left -100%
		&.right
			left 0


.carousel-indicators
	position absolute
	bottom 10px
	left 50%
	z-index 15
	width 60%
	margin-left -30%
	padding-left 0
	list-style none
	text-align center
	li
		display inline-block
		width 10px
		height 10px
		margin 1px
		text-indent -999px
		border 1px solid #fff
		border-radius 10px
		cursor pointer
		background-color #000 \9
		background-color rgba(0,0,0,0)
	.active
		margin 0
		width 12px
		height 12px
		background-color #fff
.carousel-control
	position absolute
	top 0
	left 0
	bottom 0
	z-index 100
	width 10%
	opacity .5
	font-size 20px
	color #fff
	text-align center
	text-shadow 0 1px 2px rgba(0,0,0,.6)
	background-position 20px center
	background-repeat no-repeat
	background-image url(../images/slider_left.svg)
	&.right
		left auto
		right 0
		background-position calc(100% - 20px) center
		background-image url(../images/slider_right.svg)