@import 'variables.styl'

.header_fixed
	position fixed
	left 0
	right 0
	top 0
	z-index 1000
.top
	background ctext
	color #fff
	font-size 12px
	padding 20px 0
	.wrap
		min-width 750px
		width 750px
		overflow hidden
	.button
		float right
		margin 0 0 0 50px
	h3
		font-size 15px
		font-weight 600
	a
		color color1

header
	background #fff
	.wrap
		z-index 10
.header_logo
	width 120px
	height 80px
	background url(../images/logo.png) no-repeat center
	background-size 120px 50px
	display inline-block
	text-indent -10000em

.header_menu
	position absolute
	top 0
	left 185px
	height 100%

	ul
		height 100%
	li
		height 100%
		font-size 11px
		text-transform uppercase
		font-weight 600
		letter-spacing 1.5px
		float left
		a
			display block
			padding 0 21px
			height 100%
			line-height 80px
			position relative
		&.active
			&>a:after, &>a:before
				bottom 0
				left 50%
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none
				margin-bottom -1px
			&>a:after
				border-color rgba(255, 255, 255, 0)
				border-bottom-color #fff
				border-width 12px
				margin-left -12px
			&>a:before
				border-color rgba(194, 225, 245, 0)
				border-bottom-color bdcolorlight
				border-width 13px
				margin-left -13px
			&>a
				color color2
.header_submenu
	border-top 1px solid bdcolorlight
	border-bottom 1px solid bdcolorlight
	font-size 11px
	font-weight 600
	li
		display inline-block
		height 55px
		&:first-child
			a
				padding-left 0
		a
			line-height 55px
			padding 0 16px


.header_search
	position absolute
	top 20px
	left 400px
	width 33%
	input[type='text'],
	input[type='search']
		width calc(100% - 43px)
		float left
	input[type='submit']
		width 43px
		height 40px
		background ctext url(../images/icon_search.svg) no-repeat center
		color #fff
		border none


.header_profile
	position absolute
	top 20px
	right 0

	.profile_name
		display inline-block
		margin 10px 0 0
		font-size 11px
		text-transform uppercase
		line-height 24px
		font-weight 600
		letter-spacing 1.5px
		img
			width 24px
			height 24px
			border-radius 50%
			margin 0 7px 0 0
			display inline-block
			vertical-align middle


// баннер на главной
.home_banner
	height 500px
	position relative
	.back_img
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		overflow hidden
		background-size cover
	.text
		padding 200px 0 0 40px
		color #fff
		z-index 10
		box-sizing border-box
	h1
		font-family fftitle
		font-size 90px
		color #fff
		font-weight 500
		margin 0
		padding 0
		line-height 80px

	&>div
		height 100%
	.carousel-inner
		height 100%

// блоки на главной
.block
	padding 55px 0
	overflow hidden
	&.border
		border-bottom 1px solid bdcolorlight
.block_title
	font-size 50px
	font-family fftitle
	text-align center
	text-transform uppercase
	font-weight 500
	padding 0 0 15px
	margin 0 0 50px
	&:after
		content ''
		width 70px
		height 2px
		background ctext
		display inline-block
		position absolute
		left calc(50% - 35px)
		bottom 0

// shopping_list
.shopping_list
	overflow hidden
	.item
		height 200px
		overflow hidden
		margin-bottom 20px
		border-radius 3px
		width 32%
		margin-right 2%
		float left
		&:nth-child(3n)
			margin-right 0
		img
			position absolute
			left 0
			top 0
			height 100%
		a
			position relative
			display block
			height 100%
			width 100%
			box-sizing border-box
			padding 120px 0px 0 0
			text-align right
			font-weight 500
			color #fff
			font-size 15px
			.title
				position relative
				display inline-block
				height 50px
				line-height 50px
				padding 0 40px

				z-index 10
				span
					color color2
				&:before
					content ''
					position absolute
					z-index -1
					top 0
					left 0
					width 120%
					height 100%
					background rgba(#000,0.8)
					transform skewX(-15deg)
					border-radius 3px

.recommended_user_list
	.item
		border-radius 5px
		box-sizing border-box
		border 1px solid bdcolorlight
		text-align center
		float left
		width 22.75%
		margin-right 3%
		float left
		&:nth-child(4n)
			margin-right 0
		figure
			height 88px
			box-sizing border-box
			padding 44px
			margin -1px -1px 50px
			border-radius 5px 5px 0 0
			.photo
				display inline-block
				background #ccc
				width 72px
				height 72px
				border 4px solid #fff
				border-radius 10px
				overflow hidden
				img
					width 100%
					height 100%
		.name
			font-size 20px
			font-weight 600
			padding 0 10px
			margin 0 0 5px
			overflow ellipsis
		.desc
			font-size 12px
			font-weight 400
			padding 0 10px
			line-height 14px
			margin 0 0 25px
		.products
			width 158px
			display inline-block
			a
				display inline-block
				float left
				width 50px
				height 50px
				border-radius 2px
				margin 0 4px 4px 0
				overflow hidden
				background-repeat no-repeat
				background-size cover
				&:nth-child(3n)
					margin-right 0


.browse_list
	overflow hidden
	.item
		height 170px
		overflow hidden
		margin-bottom 30px
		border-radius 3px
		float left
		width 22.75%
		margin-right 3%
		float left
		&:nth-child(4n)
			margin-right 0
		img
			position absolute
			left 0
			top 0
			height 100%
		a
			position relative
			display block
			height 100%
			width 100%
			box-sizing border-box
			padding 68px 0 0 0
			text-align center
			font-weight 600
			color #fff
			font-size 12px
			letter-spacing 1px
			.title
				position relative
				display inline-block
				height 34px
				line-height 34px
				padding 0 20px
				z-index 10
				span
					color color2
				&:before
					content ''
					position absolute
					z-index -1
					left 0
					right 0
					width 100%
					height 100%
					background rgba(#000,0.6)
					transform skewX(-15deg)
					border-radius 6px
.browse
	.more_title
		text-align center
		font-size 13px
		font-weight 600
		text-transform uppercase
		margin 30px 0 30px
		letter-spacing 2px
	.more_list
		a
			display block
			float left
			width 25%
			box-sizing border-box
			padding 0 10px
			margin 0 0 15px
			overflow ellipsi
			text-align center
			font-size 13px

.tizers
	.item
		box-sizing border-box
		padding 80px 50px 0
		text-align center
		width 32%
		margin-right 2%
		float left
		&:nth-child(3n)
			margin-right 0
		&.easy_use
			background url(../images/icon_easy_use.svg) no-repeat center 0
		&.trusted
			background url(../images/icon_trust.svg) no-repeat center 0
		&.secure
			background url(../images/icon_secure.svg) no-repeat center 0
		h3
			font-size 20px
			font-weight 600
			margin 0 0 10px
		p
			color ctext + 20%

.download_app
	position relative
	box-sizing border-box
	padding 160px 0 120px
	background url(../images/app_phone.jpg) no-repeat 12% 95px
	background-size 412px 497px
	.text
		margin 0 5% 0 55%
	h2
		font-size 30px
		font-weight 600
		line-height 34px
		margin 0 0 20px
	p
		font-size 16px
		color ctext + 20%
		margin 0 0 15px
	.download_buttons
		margin 30px 0 0


// кнопки скачивания
.download_buttons
	a
		display inline-block
		height 50px
		width 170px
		border-radius 5px
		background-color ctext
		background-position center
		background-repeat no-repeat
		margin 0 15px 0 0
		&.google_play
			background-image url(../images/google_play.svg)
		&.app_store
			background-image url(../images/app_store.svg)

// соцсети
a[class*="social_w"]
	padding-left 26px
	color #fff
	background-position 0 center
	background-repeat no-repeat
	line-height 16px
	display inline-block
	margin-bottom 5px
	&.social_w_fb
		background-image url(../images/facebook_w.svg)
	&.social_w_tw
		background-image url(../images/twitter_w.svg)
	&.social_w_in
		background-image url(../images/instagram_w.svg)

// методы оплаты
a[class*="payment_"]
	display inline-block
	width 45px
	height 25px
	margin 0 4px 4px 0
	background-size containh
	&[class*="visa"]
		background url(../images/visa.svg) no-repeat 0 0
	&[class*="mastercard"]
		background url(../images/mastercard.svg) no-repeat 0 0
	&[class*="american"]
		background url(../images/american.svg) no-repeat 0 0
	&[class*="paypal"]
		background url(../images/paypal.svg) no-repeat 0 0


// подвал
footer
	background ctext
	font-size 12px
	color #fff
	overflow hidden
	padding 50px 0 0
	a
		color #fff
	.download_buttons
		margin 15px 0
		a
			border 2px solid #fff
			width 150px
			height 44px
			margin 0 5px 10px 0

	input[type='text']
		border-color #fff
		&:focus
			border-color #fff

.footer_logo
	display block
	width 120px
	height 50px
	background url(../images/logo_w.png) no-repeat 0 0
	background-size cover
	margin 0 0 20px
.footer_desc
	max-width 210px
	font-size 13px
	p
		margin 0

.footer_menu
	.title
		font-weight 600
		text-transform uppercase
		padding 0 0 8px
		margin 0 0 15px
		letter-spacing 1px
		&:after
			content ''
			width 50px
			height 2px
			background #fff
			display inline-block
			position absolute
			left 0
			bottom 0
	ul
		margin 0 0 20px
	li
		margin 0 0 5px
.footer_subscribe
	float right
	input[type='text']
		margin-bottom 10px
		&::-webkit-input-placeholder
			color color2
		&::-moz-placeholder
			color color2
		&:-ms-input-placeholder
			color color2!important

.copyright
	clear both
	border-top 1px solid ctext + 15%
	padding 20px 0
	font-size 11px
// баннер категории
.category_banner
	height 265px
	margin 0 0 40px
	&:before
		content ''
		width 115px
		height 100%
		position absolute
		z-index 5
		left 0
		top 0
		background url(../images/category_banner_left.svg) no-repeat 0 0
	&:after
		content ''
		width 180px
		height 100%
		position absolute
		z-index 5
		right 0
		top 0
		background url(../images/category_banner_right.svg) no-repeat 0 0
	.back_img
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		overflow hidden
		background-size cover
	h1
		position absolute
		top 35%
		left 0
		z-index 10
		font-family fftitle
		font-size 90px
		color #fff
		font-weight 500
		margin 0
		padding 0
		line-height 64px
		height 78px
		padding 0 25px
		&:before
			content ''
			position absolute
			z-index -1
			left 0
			right 0
			width 100%
			height 100%
			background #000
			transform skewX(-15deg)

	.text
		position absolute
		right 0
		top 35%
		width 50%
		padding 15px 30px
		color #fff
		font-size 12px
		z-index 10
		box-sizing border-box
		&:before
			content ''
			position absolute
			z-index -1
			top 0
			left 0
			width 100%
			height 100%
			background rgba(#000,0.5)
			transform skewX(-15deg)

// фильтры
.filter_block
	margin 0 0 30px
	.filter_block_title
		font-size 12px
		font-weight bold
		padding 0 0 7px
		border-bottom 1px solid bdcolorlight + 40%
		text-transform uppercase
		margin 0 0 15px
		.caret
			display inline-block
			margin 1px 0 0
			float right
			font-size 9px
			font-weight 700
			color color1
			text-transform uppercase
			letter-spacing 1px
			&:after
				content ''
				width 8px
				height 8px
				display inline-block
				vertical-align -1px
				margin 0 0 0 6px
				background url(../images/filter_expand_arrow.svg) no-repeat 0 0
			&.right
				&:after
					transform rotate(-90deg)
.filter_list
	&.scroll
		padding-bottom 50px
		max-height 190px
		overflow auto
		border-bottom 1px solid bdcolorlight + 40%
		&:after
			content ''
			height 60px
			width 100%
			position absolute
			bottom 1px
			left 0
			background linear-gradient(top, rgba(#fff,0), #fff)
	li
		margin 0 0 7px
	a
		font-size 12px
		&.active
			color color1
			font-weight 600

.filter_subcategory
	border 1px solid ctext
	.filter_subcategory_title
		display block
		font-size 36px
		font-family fftitle
		font-weight 600
		text-transform uppercase
		overflow ellipsis
		height 54px
		background #fff url(../images/arrow_left.svg) no-repeat 23px center
		line-height 52px
		padding 0 10px 0 48px
	ul
		overflow auto
		max-height 200px
		padding-bottom 50px
		&:after
			content ''
			height 60px
			width 100%
			position absolute
			bottom 0
			left 0
			background linear-gradient(top, rgba(#fff,0), #fff)
	li
		a
			display block
			padding 7px 10px 7px  23px
			font-size 13px
			font-weight 600
			text-transform uppercase
			&.active
				background color1
				color #fff

.filter_checkbox_group
	margin 0 0 10px
	clearfix()
	.filter_checkbox_group_title
		font-size 12px
		font-weight 600
		margin 0 0 7px
	.item
		display inline-block
		float left
		width 36px
		height 36px
		margin 0 5px 5px 0
		input[type="checkbox"],
		input[type="radio"]
			visibility hidden
			display none
		label
			display block
			height 100%
			line-height 36px
			border 1px solid bdcolorlight
			font-size 12px
			color ctext + 30%
			text-align center
			box-sizing border-box
			cursor pointer
		input[type="checkbox"]:checked,
		input[type="radio"]:checked
			&+label
				background color1
				border-color color1
				color #fff
	&.color
		.item
			width 32px
			height 32px
			margin 0 10px 10px 0
			label
				border-radius 50%
				border-style none
			input[type="checkbox"]:checked,
			input[type="radio"]:checked
				&+label
					box-shadow 0 0 0 2px #fff, 0 0 0 4px color1

.breadcrumbs
	padding 0 0 25px
	margin 0 0 20px
	border-bottom 1px solid bdcolorlight + 40%
	font-size 12px
	text-transform uppercase
	font-weight 600
	letter-spacing 2px
	a
		display inline-block
		margin 0 10px 0 0
		&:after
			content ''
			display inline-block
			width 7px
			height 6px
			vertical-align 2px
			background url(../images/arrow_right.svg) no-repeat 0 0
			margin 0 0 0 12px
		&.active
			color color1
			&:after
				display none
.sort_block
	margin 0 0 25px
	clearfix()
	&.bottom
		border-top 1px solid bdcolorlight + 40%
		padding 20px 0 0

.selected_filters
	display inline-block
	vertical-align top
	margin 8px 0 0 20px
	max-width 50%
	a
		display inline-block
		border-radius 20px
		height 24px
		line-height 25px
		font-size 11px
		font-weight 600
		color #fff
		padding 0 30px 0 12px
		margin 0 1px 5px 0
		background color1 url(../images/icon_delete.svg) no-repeat calc(100% - 10px) center
		&:hover
			background-color cerror
		&.clear_all
			background-color ctext

.pagination
	float right
	margin 5px 0 0
	a
		display inline-block
		padding 5px
		font-size 12px
		text-transform uppercase
		letter-spacing 1px
		&.disabled
			color ctext + 50%
			cursor default
		&.active
			color color1

.category_desc
	font-size 12px
	line-height 18px
	color ctext + 40%
	border-top 1px solid bdcolorlight + 40%
	padding 30px 0
	p
		margin 0 0 15px


// объявления

.card_list
	clearfix()
	margin 0 auto 40px
	width 100% !important
	height 100px

.card_item
	margin-bottom 20px
	border 1px solid bdcolorlight
	padding 15px
	box-sizing border-box
	vertical-align top
	position absolute
	@media (max-width: 1102px)
		width 200px


.card_list_product
	.card_item_desc
		margin -16px -16px 15px
		display block
		overflow hidden
	.card_item
		&_user
			font-size 11px
			display block
			overflow hidden
			.user_img
				float left
				width 30px
				height 30px
				border-radius 50%
				overflow hidden
				background-size cover
				background-repeat no-repeat
				background-position center
				img
					width 30px!important
					min-height 30px
			.user_name
				font-size 13px
				color ctext
				display block
				line-height 14px
				margin 1px 0 0 38px
				word-break break-all
				em
					color #8C8C8C
					font-size 11px
			.user_post_time
				display block
				color ctext + 50%
				line-height 14px
				margin 0 0 0 38px
			&:hover
				.user_name
					color color2

		&_img
			display block
			overflow hidden
			position relative
			width 100%

			img
				width 100%
				height auto
				float left
		&_sold
			background rgba(color2,0.8)
			position absolute
			top 0
			left 0
			padding 5px 20px
			color #fff
			font-size 13px
			font-weight bold
			opacity 1
			transition .4s

		&_name
			margin 0 0 2px
			display block
		&_price
			font-size 13px
			color ctext + 50%
			margin 0 0 20px

		&_info
			overflow hidden

		&_likes
			float right
			color #aaa
			display inline-block
			margin 3px 0 0 10px
			font-size 13px
			color color2
			font-weight 500
			&:before
				content ''
				display inline-block
				background url(../images/icon_likes.svg) no-repeat 0 0
				margin 0 4px 0 0
				width 13px
				height 10px
				vertical-align 0

		&_info_comments
			&:before
				content '\e703'
				font-size 13px

// страница пользователя
.block_border
	width 100%
	box-sizing border-box
	margin-bottom 20px
	border 1px solid bdcolorlight
	border-radius 2px
	padding 15px 25px
	box-sizing border-box
.block_border_title
	font-size 16px
	text-transform uppercase
	font-weight 500
	padding 0 0 8px
	border-bottom 1px solid ctext
	margin 0 0 15px

.user_id_products
	.three
		float right
	.nine
		float left
		margin-left 0

.user_id_social_share
	text-align center
	color #999
	p
		margin 0 0 10px
		line-height 20px
.user_id_info
	padding 0!important
	color #999
	&>div
		padding 10px 15px
		border-bottom 1px solid bdcolorlight
.user_id_info_desc
	p
		margin 5px 0
.user_id_info_address
	text-align center
	[class^="icon-"]
		&:before
			font-size 24px
			vertical-align middle
			margin-right 5px
.user_id_info_follow
	display flex
	justify-content space-around
	a
		text-align center
		color color1
		text-transform uppercase
		font-size 13px
		line-height 20px
		&:hover
			color lighten(color1,20%)


.fb_circle,
.tw_circle,
.gp_circle
	display inline-block
	width 32px
	height 32px
	text-indent -10000em
	background-size 100%
	transition .3s
	&:hover
		opacity 0.9

.fb_circle
	background-image url(../images/facebook_circle.svg)
.tw_circle
	background-image url(../images/twitter_circle.svg)
.gp_circle
	background-image url(../images/googleplus_circle.svg)

// страница продукта
.produc_id_user
	margin 0 0 10px
	overflow hidden
	&_link
		display inline-block
		vertical-align top
		margin-right 50px
		&:hover
			.produc_id_user_name
				color color2
	&_img
		float left
		width 70px
		height 70px
		border-radius 50%
		overflow hidden
		margin 0 12px 0 0
		background-size cover
		background-repeat no-repeat
		background-position center
	&_name
		margin 12px 0 0 85px
		font-size 18px
		font-weight 500
		display block

	&_address
		display block
		margin-left 85px
		color #aaa
	&_buttons
		display inline-block
		vertical-align top
		padding 12px 0 0


.offers_list
	clear both
.offers_item
	margin 0 0 10px
	overflow hidden
	&_user_img
		float left
		width 65px
		height 65px
		border-radius 50%
		overflow hidden
		margin 0 12px 0 0
		background-size cover
		background-repeat no-repeat
		background-position center
	&_content
		margin 0 0 0 80px
		padding 10px 0 0
	&_user_name
		color color1
